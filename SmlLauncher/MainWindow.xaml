        <Label Content="Select Virtual Machine:" HorizontalAlignment="Left" Margin="40,62,0,0" VerticalAlignment="Top"/>
        <Button Content="Repair VM" HorizontalAlignment="Left" Margin="17,34,0,0" VerticalAlignment="Top" Width="75" Name="btnRepairVM" Click="btnRepairVM_Click"/>


    </Grid>
</Window>

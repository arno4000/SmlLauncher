<Window x:Class="SmlLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmlLauncher"
        mc:Ignorable="d"
        Title="Smartlearn Launcher" Height="176.311" Width="302.121" Icon="vmware.ico">
    <Grid>
        <Button Content="Start VM" HorizontalAlignment="Left" Margin="204,34,0,0" VerticalAlignment="Top" Width="75" Name="btnStartVM" Click="btnStartVm_Click"/>
